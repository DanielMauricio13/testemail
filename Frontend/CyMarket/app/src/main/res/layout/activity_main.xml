<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Building layout for settings and profile a top of screen -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_profile_txt"
            android:layout_width="321dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawableStart="@drawable/profile_art"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="4dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/main_settings_txt"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawableStart="@drawable/settings_art"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="right"
            android:padding="4dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/logo2" />

    <!-- Building block that supports the screen -->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/big_block_background"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="200dp">

        <Button
            android:id="@+id/main_buy_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttons_1_color"
            android:text="Buy"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>

        <Button
            android:id="@+id/main_sell_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttons_1_color"
            android:text="Sell"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>

        <Button
            android:id="@+id/main_messages_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttons_1_color"
            android:text="Messages"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>

        <Button
            android:id="@+id/main_listings_btn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/buttons_1_color"
            android:text="Listings"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:text="Featured Categories" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safe. Simple. ISU Only."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:padding="4dp"
        android:layout_marginTop="2dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>