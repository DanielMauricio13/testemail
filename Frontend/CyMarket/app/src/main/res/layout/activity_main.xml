<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <!-- Top-bar -->
    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="6dp">

        <!-- Profile Button (left) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_profile_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Profile"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#E63946"
            app:cornerRadius="20dp"
            android:elevation="6dp"
            android:layout_marginEnd="180dp"
            android:contentDescription="Profile Navigation" />

        <!-- Settings Button (right) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_settings_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Settings"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#E63946"
            app:cornerRadius="20dp"
            android:elevation="6dp"
            android:contentDescription="Settings Navigation" />
    </LinearLayout>

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/top_nav"
        android:layout_above="@id/bottom_nav"
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/logo2"
        android:scaleType="centerInside"
        android:transitionName="logo_transition"
        android:contentDescription="App Logo" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemRippleColor="@color/buttons_2_color"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="12dp" />
</RelativeLayout>