<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_marginTop="40dp"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/pfp" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:textSize="18dp"
        android:textColor="#E63946">
    </TextView>

    <!-- Main Content Block for Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:padding="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:clipToOutline="true"
        android:backgroundTint="?attr/colorSurface">

        <!-- button rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prfls_home_page_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:text="Home"
                android:textSize="13sp"
                app:cornerRadius="16dp"
                app:iconPadding="8dp"
                android:elevation="4dp"
                android:textColor="@color/white"
                android:backgroundTint="#E63946"
                android:contentDescription="Home" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prfls_messages_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:text="Message"
                android:textSize="13sp"
                app:cornerRadius="16dp"
                app:iconPadding="8dp"
                android:elevation="4dp"
                android:textColor="@color/white"
                android:backgroundTint="#E63946"
                android:contentDescription="Messages" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prfls_setting_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Settings"
                android:textSize="13sp"
                app:cornerRadius="16dp"
                app:iconPadding="8dp"
                android:elevation="4dp"
                android:textColor="@color/white"
                android:backgroundTint="#E63946"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

