<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Building block that supports the screen -->
    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="60dp"
        android:background="@drawable/big_block_background"
        android:elevation="12dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="45sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/buttons_2_color"
            android:layout_marginBottom="4dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue."
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/buttons_2_color"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

        <!-- First and Last Name Part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/signup_first_name_edt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:background="@drawable/edittext_box"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/signup_last_name_edt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Last Name"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:background="@drawable/edittext_box"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- ISU Email Part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/signup_email_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_box"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical|start"
                android:hint="Enter Email (@iastate.edu)"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Username Part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/signup_username_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Username Here"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:background="@drawable/edittext_box"/>
        </LinearLayout>

        <!-- Password Part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/signup_password_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Password Here"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:background="@drawable/edittext_box"/>
        </LinearLayout>

        <!-- Confirm Password Part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/signup_confirm_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password Here"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:padding="12dp"
                android:background="@drawable/edittext_box"/>
        </LinearLayout>

        <!-- Buttons Part -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/signup_signup_btn"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="18sp"
                android:backgroundTint="@color/buttons_1_color"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/signup_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:layout_marginTop="12dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>