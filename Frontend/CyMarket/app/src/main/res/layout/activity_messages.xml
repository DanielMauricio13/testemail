<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msgs_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="30dp"
        android:textColor="#fc0303">
    </TextView>

    <Button
        android:id="@+id/msgs_home_page_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Home"
        android:textSize="20sp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/msgs_profile_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Profile"
        android:textSize="20sp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/msgs_buy_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Buy"
        android:textSize="20sp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/msgs_sell_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sell"
        android:textSize="20sp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/msgs_listings_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My Listings"
        android:textSize="20sp"
        android:textColor="#ffffff">
    </Button>
</LinearLayout>